<form action="/event/active" method="post">
    <div class="transparentbox">
      <h2 class='text-center'>Looking for gyms?</h2>
      <div class="form-group">
        <label>Gym:</label>
          <input type="text" name="gym" class="form-control" placeholder="Search for a gym" required>
        </div>
        <input type="submit" value="Search" class="btn btn-success">
    </form>
    <hr>
    <h2 class = 'text-center'>Schedule a workout time</h2>
    <form action="/schedule" method="post">
      <div class="form-group">
        <label>Exercise:</label>
        <input type="text" name="exercise" class="form-control" placeholder="Workout" required>
      </div>
      <div class="form-group">
        <label>Date:</label>
        <input type="date" name="date" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Time:</label>
        <input type="time" name="time" class="form-control" required>
      </div>
      <input type="submit" value="workout" class="btn btn-success">
    </div>
</form>