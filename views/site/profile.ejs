<div class ="transparentbox">
	<h2>PROFILE</h2>
	<div>  
		<h3>Welcome back, <%= currentUser.firstname %>!</h3>
	  <a href='/schedule'><button type="button" class="btn btn-default btn-lng">Schedule a Workout or Look For a Gym</button></a>

	  <% if (workouts.length <=0) {%>
	   <h2 class = "text-center">No worksouts schedule</h2>
	  <%} else {%>
	  <% workouts.forEach(function(item) {%>
	  <div class="list">
	  <br>
	      <ul>
	          <li><h4><%= item.name %></h4></li>
	          <li><h4><%= item.nextnotice %></h4></li>
				</ul>
					<a href="/workouts/<%=item.id%>" class="btn btn-danger glyphicon glyphicon-trash delete-workout"></a>
		</div>
		<% }) %>
		<% }; %>
	</div>
</div>
